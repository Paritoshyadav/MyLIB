<h2 class="page-header">Search Books</h2>
<form action="/books" method="GET">
    <div class="form-row">
        <div class="form-item">
    <label>Title</label>
    <input type="text" name="title" value="<%= searchOption.title %>">
    </div>
    </div>
    <div class="form-row">
        <div class="form-item">
        <label>Published After</label>
        <input type="date" name="publishedAfter" value="<%= searchOption.publishedAfter %>">   
    </div>
    <div class="form-item">
        <label>Published Before</label>
        <input type="date" name="publishedBefore" value="<%= searchOption.publishedBefore %>">
    </div>
    </div>
    <div class="form-row form-row-end">
    <button class="btn btn-primary" type="submit">Search</button>
    </div>
</form>
<div>
    <% bookCoverClass = locals.large ? 'book-cover-large' : '' %>
    <% bookGridClass = locals.large ? 'book-grid-large' : '' %>

    <div class="book-grid <%= bookGridClass %>">
<% books.forEach(book=>{  %>
    <a href="/books/<%= book.id %>">
    <img class="book-cover" height="150" width="100" src="<%= book.coverImagePath %>">
    </a>
    <% }) %>
</div>
</div>

